source("TestHarness.bsh");

flag=false;

class MyClass extends Thread 
{
	static boolean sflag=false;
	public void run() { 
		print("enter run flag="+flag); 
		sflag=true; flag=true; 
	}
}

assert( MyClass.sflag == false );
assert( flag == false );

new MyClass().start();

assert( MyClass.sflag == true );
assert( flag == true );

complete();
