
import javax.swing.ImageIcon;
import java.awt.*;

/*
	Daniel Leuck: supplied this

	Note: any errors thrown in here will be caught by interpreter and
	ignored... printing the default message.
*/
printBanner() {

	if ( bsh.console != void 
		&& bsh.Capabilities.haveSwing() 
		&& (bsh.console instanceof bsh.util.JConsole) ) {

	    jconsole =	bsh.console;
	    jconsole.println( 
			new ImageIcon( getResource("/bsh/util/lib/small_bean_shell.gif")) );
	    jconsole.print(
			"1.1 alpha - by Pat Niemeyer (pat@pat.net)",
			new Font("SansSerif", Font.BOLD, 12), 
			new Color(20,100,20) );
	    jconsole.println();

	} else
		print("BeanShell 1.1 alpha - by Pat Niemeyer (pat@pat.net)");

}
