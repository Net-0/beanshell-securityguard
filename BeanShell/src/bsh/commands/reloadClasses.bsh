
bsh.help.reloadClasses= 
	"usage: reloadClasses( String class | String package | String [] classes )";

/**
	Reload specified set of classes
*/
reloadClasses( item ) {
	bcm = bsh.BshClassManager.getClassManager();

	try {
	if ( item instanceof String [] )
		bcm.reloadClasses( item, this.interpreter );
	else {
		name = item;

		if ( name.endsWith(".*" ) ) {
			if ( name.equals(".*" ) )
				pack = "<unpackaged>";
			else
				pack = name.substring( 0, name.length()-2 );
			
			bcm.reloadPackage( pack, this.interpreter );
		} else
			bcm.reloadClasses( new String[] { name }, this.interpreter );
	}
	} catch ( bsh.ClassPathException e ) {
		error( e.getMessage() );
	}
}

/**
	Reload all classes
*/
reloadClasses() {
	bsh.BshClassManager.getClassManager().reloadAllClasses();
}
